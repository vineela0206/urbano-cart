/*select_size.html CSS*/

/* --- layout wrapper (optional: works if you have a .size-picker wrapper) --- */

/* Center the whole size selection area */
.size-picker,
.size-box-container,
.size-row {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 12px;
}

/* Ensure labels don't stretch weirdly */
.size-box,
label[for^="size"] {
    text-align: center;
    justify-content: center;
}

/* Optional: center the heading */
h2 {
    text-align: center;
    margin-bottom: 20px;
}

/* Center error text */
.size-error {
    text-align: center;
}

.size-picker {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(56px, 1fr));
  gap: 10px;
  align-items: stretch;
  margin: 12px 0;
  width: 100%;
}

/* --- fallback: if you don't use .size-picker, ensure the container doesn't collapse --- */
.size-box-container,
.size-picker,
.size-row {
  display: flex;
  gap: 10px;
  flex-wrap: wrap;
  align-items: center;
}

/* --- visually hide native radios but keep them accessible --- */
.size-picker input[type="radio"],
.size-box input[type="radio"],
input[type="radio"].size-hidden {
  position: absolute !important;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0 0 0 0);
  clip-path: inset(50%);
  border: 0;
  white-space: nowrap;
}

/* --- pill label styling --- */
.size-box {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 56px;
  min-height: 44px;            /* mobile-friendly hit area */
  padding: 8px 14px;
  border-radius: 999px;        /* pill */
  border: 1px solid var(--size-border, #e5e7eb);
  background: var(--size-bg, #ffffff);
  color: var(--size-text, #111827);
  font-weight: 600;
  cursor: pointer;
  user-select: none;
  text-align: center;
  transition: transform .12s ease, box-shadow .12s ease, background .12s ease, border-color .12s ease;
  box-shadow: 0 0 0 0 rgba(0,0,0,0);
}

/* If your labels don't have class .size-box but are plain labels, style them too */
label[for^="size"] { /* broad fallback for your ids like size1,size2... */
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 56px;
  min-height: 44px;
  padding: 8px 14px;
  border-radius: 999px;
  border: 1px solid var(--size-border, #e5e7eb);
  background: var(--size-bg, #fff);
  color: var(--size-text, #111827);
  font-weight: 600;
  cursor: pointer;
  transition: transform .12s ease, box-shadow .12s ease, background .12s ease;
}

/* --- hover + subtle lift for pointer users --- */
.size-box:hover,
label[for^="size"]:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 20px rgba(16,24,40,0.06);
}

/* --- checked state (radio + label) --- */
/* Works when you use: <input type="radio" id="sizeX"> <label for="sizeX" class="size-box"> */
input[type="radio"]:checked + label.size-box,
input[type="radio"]:checked + label[for^="size"] {
  background: var(--brand, #111827);   /* change --brand in :root if needed */
  color: #fff;
  border-color: var(--brand, #111827);
  box-shadow: 0 10px 30px rgba(17,24,39,0.12);
  transform: translateY(-3px);
}

/* If your markup wraps label before input (unlikely) handle the reversed selector too */
label.size-box input[type="radio"]:checked,
label[for^="size"] input[type="radio"]:checked {
  /* no-op: covered by the main selector; included for completeness */
}

/* --- focus-visible for keyboard users (strong outline) --- */
input[type="radio"]:focus + label.size-box,
input[type="radio"]:focus + label[for^="size"],
label.size-box:focus,
label[for^="size"]:focus {
  outline: 4px solid rgba(99,102,241,0.18);
  outline-offset: 4px;
  z-index: 2;
}

/* --- disabled / out-of-stock styling --- */
.size-box.disabled,
label[for^="size"].disabled,
label[for^="size"][aria-disabled="true"] {
  opacity: 0.45;
  cursor: not-allowed;
  transform: none;
  pointer-events: none;
  border-style: dashed;
  background: var(--size-disabled-bg, #fafafa);
  color: var(--size-disabled-text, #6b7280);
  box-shadow: none;
}

input[type="radio"][disabled] + label.size-box,
input[type="radio"][disabled] + label[for^="size"] {
  opacity: 0.45;
  cursor: not-allowed;
  pointer-events: none;
  border-style: dashed;
  background: var(--size-disabled-bg, #fafafa);
  color: var(--size-disabled-text, #6b7280);
}


.size-meta {
