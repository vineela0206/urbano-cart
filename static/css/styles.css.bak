}

/* --- size guide link --- */
.size-guide {
  margin-left: 10px;
  font-size: 0.92rem;
  color: #4f46e5;
  cursor: pointer;
  text-decoration: underline;
}

#sizeGuideModal[aria-hidden="true"] { display: none; }
#sizeGuideModal[aria-hidden="false"] {
  display: block;
  position: fixed;
  inset: 0;
  z-index: 9999;
  background: rgba(15, 23, 42, 0.6);
  padding: 24px;
}

#sizeGuideModal > div {
  max-width: 640px;
  margin: 64px auto;
  background: #fff;
  padding: 20px;
  border-radius: 12px;
  box-shadow: 0 20px 60px rgba(2,6,23,0.6);
}

/* responsive tweaks */
@media (min-width: 640px) {
  .size-picker { gap: 12px; }
  .size-box { min-height: 48px; padding: 10px 16px; }
}

.form-row { display:flex; gap:12px; align-items:center; flex-wrap:wrap; }

.size-box[style],
label[for^="size"][style] {
  border: 1px solid var(--size-border, #e5e7eb) !important;
  background: var(--size-bg, #fff) !important;
}

.add-to-cart-btn {
    background: linear-gradient(135deg, #111827, #1f2937);
    color: #fff;
    padding: 12px 32px;
    border: none;
    border-radius: 10px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    display: block;
    margin: 25px auto;          /* center the button */
    box-shadow: 0 6px 18px rgba(0,0,0,0.15);
    transition: all .18s ease;
    letter-spacing: 0.3px;
}

/* hover animation */
.add-to-cart-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 14px 28px rgba(0,0,0,0.22);
    background: linear-gradient(135deg, #1f2937, #374151);
}

/* active / click */
.add-to-cart-btn:active {
    transform: scale(0.97);
    box-shadow: none;
}