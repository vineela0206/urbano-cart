}

/* Hero */
.hero{
  display:grid;
  grid-template-columns: 1fr 420px;
  gap:36px;
  align-items:center;
  padding-top:28px;
}
.hero-left{}
.hero-title{
  font-size:4rem;
  line-height:0.95;
  margin:0 0 12px;
}
.hero-sub{ margin:0 0 20px; color:#666; font-size:1.05rem;}
.btn-cta{
  display:inline-block;
  background:var(--accent);
  color:white;
  padding:12px 24px;
  border-radius:14px;
  text-decoration:none;
  font-weight:600;
}
.hero-right{
  text-align:right;
}

:root{
  --duration: 18s; /* total cycle (6 images = ~3s each) */
  --gap: 0.6s;
}

/* Slideshow container */
.hero-right.slider {
  position: relative;
  width: 100%;
  max-width: 420px;
  height: 400px;
  margin: 0 auto;
  overflow: hidden;
  border-radius: 16px;
}

/* Each slide (your <a> tag) */
.hero-right.slider > a {
  position: absolute;
  inset: 0;
  opacity: 0;
  pointer-events: none;       /* default: not clickable */
  z-index: 1;                 /* base stacking */
  animation-name: fade;
  animation-duration: var(--duration);
  animation-timing-function: linear;
  animation-iteration-count: infinite;
  animation-fill-mode: both;
}

/* Pause on hover */
.hero-right.slider:hover > a {
  animation-play-state: paused;
}

/* Fade animation — also toggle pointer-events and z-index when visible */
@keyframes fade {
  0%   { opacity: 0; pointer-events: none; z-index: 1; }
  6%   { opacity: 1; pointer-events: auto;  z-index: 10; }  /* becomes visible & clickable */
  23%  { opacity: 1; pointer-events: auto;  z-index: 10; }  /* stays visible & clickable */
  29%  { opacity: 0; pointer-events: none; z-index: 1; }
  100% { opacity: 0; pointer-events: none; z-index: 1; }
}

/* Image styling */
.hero-right.slider img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 16px;
  display: block;
}

/* Stagger animations for the 6 images */
.hero-right.slider > a:nth-child(1){ animation-delay: calc(0 * (var(--duration) / 6)); }
.hero-right.slider > a:nth-child(2){ animation-delay: calc(1 * (var(--duration) / 6)); }
.hero-right.slider > a:nth-child(3){ animation-delay: calc(2 * (var(--duration) / 6)); }
.hero-right.slider > a:nth-child(4){ animation-delay: calc(3 * (var(--duration) / 6)); }
.hero-right.slider > a:nth-child(5){ animation-delay: calc(4 * (var(--duration) / 6)); }
.hero-right.slider > a:nth-child(6){ animation-delay: calc(5 * (var(--duration) / 6)); }

/* Accessibility */
@media (prefers-reduced-motion: reduce) {
  .hero-right.slider > a { animation: none; opacity: 0; }
  .hero-right.slider > a:first-child { opacity: 1; }
}


/* Sections */
.section{ padding-top:8px; padding-bottom:40px; }
.section-title{ font-size:1.6rem; margin:22px 0; font-weight:700; }

/* Grid helpers */
.grid{ display:grid; gap:20px; }
.grid-4{ grid-template-columns: repeat(4, 1fr); }
.grid-3{ grid-template-columns: repeat(3, 1fr); }

.card a {
    text-decoration: none;        
}

.card{
