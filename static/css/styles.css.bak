/* styles.css - responsive layout inspired by your image */
:root{
  --max-width: 1200px;
  --accent: #ee8a3a;
  --muted: #f5f5f6;
  --text: #111;
  --card-bg: #fff;
}

*{box-sizing:border-box}
body{
  font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
  color:var(--text);
  margin:0;
  background:#fff;
  -webkit-font-smoothing:antialiased;
  -moz-osx-font-smoothing:grayscale;
}

.container{
  width: calc(100% - 48px);
  max-width: var(--max-width);
  margin: 0 auto;
  padding: 36px 0;
}

/* Header */
.site-header{
  border-bottom: 1px solid #eee;
}
.header-inner{
